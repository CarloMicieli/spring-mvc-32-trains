<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
     	http://www.springframework.org/schema/context
   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="com.trenako.web.controllers"/>

 	<bean id="brandsService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.BrandsService" />
    </bean>
    
 	<bean id="imagesService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.web.images.WebImageService" />
    </bean>
    
     <bean id="railwaysService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.RailwaysService" />
    </bean>

 	<bean id="scalesService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.ScalesService" />
    </bean>

 	<bean id="signupService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.web.security.SignupService" />
    </bean>
    
     <bean id="rsService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.RollingStocksService" />
    </bean>

     <bean id="browseService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.BrowseService" />
    </bean>

     <bean id="opService" class="com.trenako.web.test.MockitoFactoryBean">
        <constructor-arg name="classToBeMocked" value="com.trenako.services.SelectOptionsService" />
    </bean>	
</beans>
